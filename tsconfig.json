{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "allowJs": false,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "@types/node",
      "@types/jest"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
