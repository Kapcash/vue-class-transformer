{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist",
    "strict": false,
    "allowJs": false,
    "sourceMap": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "types": [
      "@types/node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
