  "version": "0.2.0",
  "configurations": [
    {
      "name": "test.vue",
      "type": "node",
      "request": "launch",
      "args": ["src/index.ts", "--nuxt", "-c", "./config.js", "./test/test.vue"],
      "runtimeArgs": ["--experimental-json-modules", "--nolazy","--loader", "ts-node/esm"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
    },
    {
      "name": "Upgrade current Vue file",
      "type": "node",
      "request": "launch",
      "args": ["index.ts", "${relativeFile}"],
      "runtimeArgs": ["--experimental-json-modules", "--nolazy", "--loader", "ts-node/esm"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
    },
  ]
}